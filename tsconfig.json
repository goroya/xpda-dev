{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "noLib": false,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "lib": [
      "es6"
    ],
    "baseUrl": ".",
    "paths": {
      "@this/core": ["packages/core/lib"],
      "@this/webpack-step": ["packages/webpack-step/lib"]
    }
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
